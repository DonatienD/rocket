<body class="body">
  <div class="row">
    <div class="col-md-2">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-md-10 principal-content">
      <div class="d-flex justify-between my-5">
        <% if current_user.teacher? %>
          <div class="room-info">
            <h2 class="mx-3 mb-2"><strong>Niveau : </strong><%= @room.level %> </h2>
            <h3 class="mx-3"><strong>Identifiant de la classe : </strong><%= @room.id %> </h3>
          </div>
        <% else %>
          <div class="room-info">
            <h2 class="mx-3 mb-2"><strong><%= @room.subject.name %></strong></h2>
            <% if @room.user == current_user %>
              <h3 class="mx-3">Vous avez créé cette matière.</h3>
            <% else %>
              <h3 class="mx-3"><strong>Enseignant : </strong><%= @room.user.profile.gender %>. <%= @room.user.profile.last_name %></h3>
            <% end %>
          </div>
        <% end %>

        <div class="relative inline-block text-left mr-4">
          <div>
            <button id="room-options-dropdown-button" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2.5 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="options-menu" aria-haspopup="true" aria-expanded="true">
              Options
              <!-- Heroicon name: chevron-down -->
              <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>

          <!--
            Dropdown panel, show/hide based on dropdown state.

            Entering: "transition ease-out duration-100"
              From: "transform opacity-0 scale-95"
              To: "transform opacity-100 scale-100"
            Leaving: "transition ease-in duration-75"
              From: "transform opacity-100 scale-100"
              To: "transform opacity-0 scale-95"
          -->
          <div id="room-options-dropdown-panel" class="hidden transition ease-in duration-75 ease-out duration-100 origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
            <% if @room.user == current_user %>
              <div class="py-1">
                <%= link_to "Nouveau chapitre", new_room_chapter_path(@room), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" %>
              </div>
            <% end %>
            <div class="py-1">
              <% if policy(@room).destroy? %>
                <div class="py-1">
                  <%= link_to "Supprimer la classe",
                              room_path(@room),
                              method: :delete,
                              data: { confirm: "Êtes-vous certain.e de vouloir supprimer cette classe ?" },
                              class: "block px-4 py-2 text-sm text-red-700 hover:bg-red-100 hover:text-red-900" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>


        <% if @room.user == current_user %>
          <div class=" flex flex-col mr-4">
            <%= link_to new_room_chapter_path(@room) do %>
              <div id="return-top" class= "w-full inline-flex justify-center items-center rounded-md shadow-sm px-3 py-2.5 bg-white text-base font-small text-gray-700 hover:text-pink-800 hover:bg-gray-800 hover:no-underline transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Nouveau chapitre
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="container">
        <% @chapters.each do |chapter| %>
          <div class="chapter mt-4">
            <div class="flex items-end">
              <h3><%= chapter.name %></h3>
              <% if @room.user == current_user %>
                <%= link_to new_chapter_mission_path(chapter) do %>
                  <div class= "flex items-center ml-4 mb-0.5 font-small text-white opacity-30 hover:opacity-50 hover:no-underline transition duration-300 ease-in-out">
                    <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Ajouter une mission
                  </div>
                <% end %>
              <% end %>
            </div>
            <div class="container flex flex-wrap">
              <% chapter.missions.each do |mission| %>
              <!-- If teacher, click on FC to go to edit view -->
                <% if current_user.teacher? %>
                  <%= link_to mission_path(mission) do %>
                    <div class="r-card d-flex mr-3 my-3">
                      <div class="text-center">
                        <h4 class="mb-5"><%= mission.name %></h4>
                      </div>
                    </div>
                  <% end %>
                <% else %>
                <!-- If Student, click on FC to play -->
                  <div class="r-card d-flex mr-3 my-3 relative">
                    <% if policy(mission).show? && !current_user.teacher? %>
                      <%= link_to mission_path(mission) do %>
                        <div class="edit-icon absolute top-2 right-2 opacity-60">
                          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="#d8dffd">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                        </div>
                      <% end %>
                    <% end %>
                    <%= link_to play_mission_path(mission) do %>
                      <div class="text-center">
                        <h4 class="mb-5 w-full h-full"><%= mission.name %></h4>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>

