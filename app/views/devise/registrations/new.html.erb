<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-gray-50 p-5 lg:p-8 rounded-xl shadow-lg">
    <div>
      <%= image_tag("rocketlogo.png", alt: "Rocket logo", class: "mx-auto h-26 w-auto r-avatar") %>
      <!-- <img class="" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow"> -->
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Créez votre compte
      </h2>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="rounded-md shadow-sm -space-y-px form-inputs">
        <div>
          <label for="user_email" class="sr-only">Adresse Email</label>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: false,
                      placeholder: 'Email',
                      error: 'Veuillez renseigner une adresse email',
                      class: "bg-yellow appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <label for="user_password" class="sr-only">Mot de passe</label>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: false,
                      hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                      placeholder: 'Mot de passe',
                      error: "Mot de passe invalide",
                      class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <label for="user_password_confirmation" class="sr-only">Confirmation du mot de passe</label>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: false,
                      placeholder: 'Confirmation du mot de passe',
                      class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit,
                      "Créer mon compte",
                      class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-900 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
