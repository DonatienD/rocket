<div class="container">
  <h1>Créer une nouvelle mission</h1>
  <div>
    <%= simple_form_for [@chapter, @mission] do |f| %>
      <div class="form-inputs">
        <%= f.input :name, label: 'Nom', placeholder: 'Nom de la leçon',class: "form-control" %>
      </div>
      <%= f.button :submit, 'Enregistrer', class: "search-button" %>
    <% end %>
  </div>
</div>
